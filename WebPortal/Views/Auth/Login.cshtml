@model LoginViewModel

@{
    ViewBag.Title = "Inloggen";
    Layout = "_Layout";
}

<h2 class="text-2xl font-semibold">Inloggen</h2>

<form asp-action="Login" method="POST">
    <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

    <label class="input input-bordered flex items-center gap-2 mt-3 max-w-md mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"/>
        </svg>
        <input asp-for="UserName" type="text" class="grow max-w-xs" placeholder="Gebruikersnaam" 
               autocomplete="username" aria-required="true"/>
    </label>
    <span asp-validation-for="UserName" class="text-red-600"></span>
    
    <label class="input input-bordered flex items-center gap-2 max-w-md">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70">
            <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd"/>
        </svg>
        <input asp-for="Password" type="password" class="grow" placeholder="Wachtwoord" 
               autocomplete="current-password" aria-required="true"/>
    </label>
    <span asp-validation-for="Password" class="text-red-600"></span>
    
    <div class="form-control max-w-40">
        <label class="label cursor-pointer">
            <span class="label-text">Ingelogd blijven?</span>
            <input asp-for="RememberMe" type="checkbox" checked="checked" class="checkbox"/>
            <span asp-validation-for="RememberMe" class="text-red-600"></span>
        </label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Inloggen</button>
</form>