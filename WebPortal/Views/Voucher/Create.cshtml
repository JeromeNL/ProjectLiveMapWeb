@model List<DataAccess.Models.User>
<div>
    <h1 class="text-2xl font-bold">Toevoegen voucher</h1>
    <a asp-controller="Voucher" asp-action="Index" class="text-blue-500 hover:text-blue-900 mx-4">Terug</a>
    <form class="flex flex-col max-w-96" asp-action="Add" method="post">
        <label for="user">Gebruiker</label>
        <select id="user" name="userId" required class="select select-bordered">
            <option selected disabled hidden value="">Kies een gebruiker</option>
            @foreach (var user in Model)
            {
                <option value="@user.Id">@user.Name</option>
            }
        </select>
        <label for="description">Beschrijving</label>
        <input id="description" name="description" type="text" class="input input-bordered" required/>
        <label for="price">Prijs</label>
        <input id="price" name="price" class="input input-bordered" type="number" min="0" max="100" required/>
        <input class="btn btn-success mt-2" type="submit" value="Opslaan"/>
    </form>
</div>
