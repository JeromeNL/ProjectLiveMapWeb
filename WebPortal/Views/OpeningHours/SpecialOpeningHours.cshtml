@model WebPortal.Models.SpecialOpeningHoursViewModel

@{
    ViewData["Title"] = "Speciale Openingstijden";
    Layout = "_Layout";
}

<h2 class="text-xl font-bold">Speciale Openingstijden - @Model.Facility.Name</h2>
<table class="w-full min-w-full divide-y divide-gray-200 mb-4">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Datum</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Openingstijd</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sluitingstijd</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acties</th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var hour in Model.SpecialOpeningHoursList)
        {
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">@hour.Date.ToString("dd-MM-yyyy")</td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <input type="time" class="form-input rounded-md" name="SpecialHours[@hour.Facility.Id].OpenTime" value="@hour.OpenTime.ToString("HH\\:mm")"/>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <input type="time" class="form-input rounded-md" name="SpecialHours[@hour.Facility.Id].CloseTime" value="@hour.CloseTime.ToString("HH\\:mm")"/>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <form method="post" asp-action="DeleteSpecialOpeningHour" asp-route-facilityId="@hour.Facility.Id" asp-route-date="@hour.Date.ToString("yyyy-MM-dd")">
                        <button type="submit" class="text-red-500 hover:text-red-700">Verwijder</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
