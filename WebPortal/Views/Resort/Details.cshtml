@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DataAccess.Models.HolidayResort
@{
    ViewData["Title"] = "Parkenbeheer";
    Layout = "_Layout";
}
  <a asp-action="Index" class="inline-block w-auto px-5 py-2 text-sm text-gray-700 transition-colors duration-200 bg-white border rounded-lg gap-x-2 dark:hover:bg-gray-800 dark:bg-gray-900 hover:bg-gray-100 dark:text-gray-200 dark:border-gray-700">
            <svg class="w-5 h-5 rtl:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
            </svg>
        </a>
<h2 class="text-xl font-bold">Parkdetails - @Model.Name</h2>

<form method="post" asp-action="Update">
   <input type="hidden" name="holidayResort.Id" value="@Model.Id"/>
    <tr>
        <td class="px-6 py-4">

        </td>
        <td class="px-6 py-4">
            <input type="text" class="form-input rounded-md" name="holidayResort.Name" value="@Model.Name"/>
        </td>

        <td class="px-6 py-4">
            <input type="text" class="form-input rounded-md" name="holidayResort.NorthEastLatitude" value="@Model.NorthEastLatitude"/>
            <input type="text" class="form-input rounded-md" name="holidayResort.NorthEastLongitude" value="@Model.NorthEastLongitude"/>
        </td>

        <td class="px-6 py-4">
            <input type="text" class="form-input rounded-md" name="holidayResort.SouthWestLatitude" value="@Model.SouthWestLatitude"/>
            <input type="text" class="form-input rounded-md" name="holidayResort.SouthWestLongitude" value="@Model.SouthWestLongitude"/>
        </td>

        <td class="px-6 py-4">
            <button type="submit" class="text-green-500 hover:text-green-700">Opslaan</button>
        </td>
    </tr>
</form>

