@model DataAccess.Models.ServiceReportCategory
@{
    ViewData["Title"] = "Servicemeldingscategorie aanmaken";
    Layout = "_Layout";
}
<div>
    <h1 class="text-2xl font-bold">Toevoegen categorie</h1>
    <a asp-controller="ServiceReportCategory" asp-action="Index" class="text-blue-500 hover:text-blue-900 mx-4">Terug</a>
    <form class="flex flex-col max-w-96" asp-action="Add" method="post">
        <label>Naam</label>
        <span asp-validation-for="Name" class="text-red-600"></span>
        <input class="input input-bordered" required asp-for="Name" value=""/>
        <input type="hidden" asp-for="HolidayResortId" value="@ViewBag.ResortId"/>
        <input class="btn btn-success mt-2" type="submit" value="Opslaan"/>
    </form>
</div>