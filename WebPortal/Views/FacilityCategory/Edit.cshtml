@using DataAccess.Models
@model DataAccess.Models.FacilityCategory

@{
    ViewBag.Title = "Categorie bewerken";
    Layout = "_Layout";
}

<h1 class="text-2xl font-semibold mb-6">Categorie bewerken</h1>
<form method="post" class="flex flex-col" asp-action="Edit">
    <label>Naam</label>
    <input type="text" class="input input-bordered" asp-for="Name" value="@Model.Name" required>

    <label>Omschrijving</label>
    <input type="text" class="input input-bordered" asp-for="Description" value="@Model.Description" required>

    <label>Icoontje</label>
    <input type="text" class="input input-bordered" asp-for="IconName" value="@Model.IconName" required>

    <button type="submit" class="btn btn-primary mt-2">Bewerken</button>
</form>